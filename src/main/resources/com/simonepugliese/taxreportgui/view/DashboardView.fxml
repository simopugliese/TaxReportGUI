<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.simonepugliese.taxreportgui.controller.DashboardController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <HBox alignment="CENTER_LEFT" spacing="15.0">
            <children>
                <Label styleClass="title-2" text="Panoramica Spese" />
                <ComboBox fx:id="yearCombo" onAction="#loadData" prefWidth="100.0" />

                <Button mnemonicParsing="false" onAction="#handleEdit" text="Modifica Selezionata">
                    <graphic>
                        <FontIcon iconLiteral="fas-edit" />
                    </graphic>
                </Button>

                <Button mnemonicParsing="false" onAction="#handleRefresh" styleClass="accent" text="Aggiorna &amp; Valida">
                    <graphic>
                        <FontIcon iconLiteral="fas-sync" />
                    </graphic>
                </Button>
            </children>
        </HBox>
        <HBox prefHeight="250.0" spacing="20.0">
            <children>
                <PieChart fx:id="statusChart" title="Stato ConformitÃ " HBox.hgrow="ALWAYS" />
                <VBox alignment="CENTER_LEFT" spacing="10.0" HBox.hgrow="SOMETIMES">
                    <children>
                        <Label styleClass="title-4" text="Riepilogo" />
                        <Label fx:id="lblTotal" text="Totale Spese: 0" />
                        <Label fx:id="lblCompliant" text="Completate: 0" textFill="GREEN" />
                        <Label fx:id="lblPartial" text="Parziali: 0" textFill="ORANGE" />
                    </children>
                </VBox>
            </children>
        </HBox>
        <TableView fx:id="expenseTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colDate" prefWidth="100.0" text="Data" />
                <TableColumn fx:id="colType" prefWidth="150.0" text="Tipo" />
                <TableColumn fx:id="colDesc" prefWidth="250.0" text="Descrizione" />
                <TableColumn fx:id="colPerson" prefWidth="150.0" text="Persona" />
                <TableColumn fx:id="colState" prefWidth="120.0" text="Stato" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </children>
</VBox>